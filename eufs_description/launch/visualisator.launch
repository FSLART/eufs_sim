<?xml version="1.0"?>
<launch>
  
  <!-- whether to use overlay or not -->
  <arg name="use_overlay" default="false" />

  <!-- launch rviz config file -->
  <node pkg="rviz" exec="rviz" name="rviz" args="-d $(find-pkg-share eufs_description)/config/rviz/visualisator.rviz" />

  <!-- if using overlay, launch overlay python script and rqt perspective file reading overlay images -->
  <group if="$(var use_overlay)">
  	  <node pkg="rqt_gui" name="debug_visuals" exec="rqt_gui" args="--perspective-file $(find-pkg-share eufs_description)/config/rqt/visualisator_overlay.perspective"/>
  	  <node pkg="eufs_description" name="camera_overlay" exec="camera_overlay.py"/>
  </group>
  
  <!-- else if not using overlay, launch rqt perspective file reading normal camera images -->
  <group if="$(eval not arg('use_overlay'))">
  	  <node pkg="rqt_gui" name="debug_visuals" exec="rqt_gui" args="--perspective-file $(find-pkg-share eufs_description)/config/rqt/visualisator.perspective"/>
  </group>

</launch>
