<?xml version="1.0"?>
<launch>
  
  <!-- roslaunch arguments -->
  <env name="GAZEBO_MODEL_PATH" value="$(find eufs_description)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(find eufs_description)"/>
  <arg name="namespace" default="eufs"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="cmd_timeout" default="0.5"/>
  <arg name="use_robot_control_odom" default="true"/>
  
  <!-- Vehicle pose -->
  <arg name="x" default="0.0"/>
  <arg name="y" default="-14.4"/>
  <arg name="z" default="0.1"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="1.57079632679"/>
  
  <!-- eufs_control launch file -->
  <include file="$(find eufs_gazebo)/launch/eufs_control.launch"/>

  <!-- Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find eufs_gazebo)/worlds/skidpad.world"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <!-- Control Method Argument -->
  <arg name="controlMethod" default="speed"/>

  <!--Launch car & controller.-->
  <include file="$(find eufs_gazebo)/launch/load_car.launch">
     <arg name="namespace" value="$(arg namespace)"/>
     <arg name="x" default="$(arg x)"/>
     <arg name="y" default="$(arg y)"/>
     <arg name="z" default="$(arg z)"/>
     <arg name="roll" default="$(arg roll)"/>
     <arg name="pitch" default="$(arg pitch)"/>
     <arg name="yaw" default="$(arg yaw)"/>
     <arg name="controlMethod" default="$(arg controlMethod)"/>
     <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
     <arg name="use_robot_control_odom" value="$(arg use_robot_control_odom)"/>
  </include>
  
  <!-- start robot_control node -->
  <!--<include file="$(find robot_control)/launch/robot_control.launch"/>-->

  <include file="$(find eufs_gazebo)/launch/extractor.launch">
      <arg name ="track_name" value="skidpad.csv"/>
      <arg name ="view_distance" value="15"/>
    </include>

  <!-- Only launch if robot_control odom is not used -->
  <group if="$(eval arg('use_robot_control_odom') == false)">
    <!-- Python script to republish ground truth -->
    <node 
      name="ground_truth_republisher"
      pkg="eufs_gazebo"
      type="ground_truth_republisher.py"
      output="screen"
    />

    <node 
      name="message_to_tf" 
      pkg="message_to_tf" 
      type="message_to_tf" 
      output="screen" 
      args="/ground_truth/state"
    />
  </group>

  <include file="$(find eufs_gazebo)/launch/extractor.launch">
    <arg name ="track_name" value="skidpad.csv"/>
    <arg name ="view_distance" value="15"/>
  </include>
</launch>
