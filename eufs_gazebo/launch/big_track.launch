<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <env name="GAZEBO_MODEL_PATH" value="$(find eufs_description)"/>
  <env name="GAZEBO_RESOURCE_PATH" value="$(find eufs_description)"/>
  <env name="GAZEBO_PLUGIN_PATH" value="$(find eufs_gazebo)/plugins"/>
  <arg default="" name="namespace"/>
  <arg default="false" name="debug"/>
  <arg default="true" name="gui"/>
  <arg default="0.5" name="cmd_timeout"/>

  <!-- Vehicle pose -->
  <arg default="-43.0" name="x"/>
  <arg default="35" name="y"/>
  <arg default="0.3" name="z"/>
  <arg default="0.0" name="roll"/>
  <arg default="0.0" name="pitch"/>
  <arg default="0.0" name="yaw"/>

  <!-- Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find eufs_gazebo)/worlds/big_track.world"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="verbose" value="false"/>
  </include>

  <!-- Load the car -->
  <!--<include file="$(find eufs_gazebo)/launch/load_car_torque.launch">
    <arg name="namespace" value="$(arg namespace)"/>
    <arg name="x" value="$(arg x)"/>
    <arg name="y" value="$(arg y)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="roll" value="$(arg roll)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="yaw" value="$(arg yaw)"/>
    <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
    <arg name="use_ground_truth" value="$(arg use_ground_truth)"/>
  </include>-->

  <!-- Control Method Argument -->
  <arg name="controlMethod" default="speed"/>
  
  <!-- Something -->
  <arg name="use_robot_control_odom" default="true"/>

  <!--Launch car & controller.-->
  <include file="$(find eufs_gazebo)/launch/load_car.launch">
     <arg name="namespace" value="$(arg namespace)"/>
     <arg name="x" default="$(arg x)"/>
     <arg name="y" default="$(arg y)"/>
     <arg name="z" default="$(arg z)"/>
     <arg name="roll" default="$(arg roll)"/>
     <arg name="pitch" default="$(arg pitch)"/>
     <arg name="yaw" default="$(arg yaw)"/>
     <arg name="controlMethod" default="$(arg controlMethod)"/>
     <arg name="cmd_timeout" value="$(arg cmd_timeout)"/>
     <arg name="use_robot_control_odom" value="$(arg use_robot_control_odom)"/>
  </include>

  <!-- eufs_control launch file -->
  <include file="$(find eufs_gazebo)/launch/eufs_control.launch"/>
  
  <include file="$(find eufs_gazebo)/launch/extractor.launch">
      <arg name ="track_name" value="big_track.csv"/>
      <arg name ="view_distance" value="15"/>
    </include>
  
</launch>
