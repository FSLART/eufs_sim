<launch>

  <arg name="launch_group" default="no_perception"/>
  <arg name="gui" default="false"/>

  <!-- Launch the simulation -->
  <include file="$(find eufs_gazebo)/launch/acceleration.launch">
      <arg name="show_rqt_gui" value="false"/>
      <arg name="gui" value="$(arg gui)"/>
      <arg name="publish_gt_tf" value="true"/>
      <arg name="launch_group" default="$(arg launch_group)"/>
  </include>

  <!-- Launch the state_machine module -->
  <include file="$(find car_meta)/launch/state_machine.launch" >
      <arg name="launch_group" value="$(arg launch_group)"/>
  </include>

  <!-- Run the acceleration test (3 min time limit) -->
  <test test-name="test_acceleration" pkg="testing_sim" type="test_acceleration.py" time-limit="180.0"/>

</launch>
